{% block content %}
		<div class="title_box accordion-heading-sin-js"><span class="accordion-toggle-sin-js">Categorias</span></div>
		<ul class="left_menu unstyled">
		{% set cont = 1 %}
		{% for item in items %}
			{% if cont%2 == 0 %}
				<li class="odd" data-categoria="{{item.pidcategoria}}"><a href="#">{{ item.Categoria }}</a></li>
			{% else %}
				 <li class="even" data-categoria="{{item.pidcategoria}}"><a href="#">{{ item.Categoria }}</a></li>
			{% endif %}
		{% set cont = cont + 1 %}
		{% endfor %}
        </ul> 
{% endblock %}
